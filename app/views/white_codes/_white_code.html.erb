<%= content_tag :tr, id: dom_id(white_code), class: 'bg-white' do %>
  <td class="px-6 py-3 whitespace-no-wrap border-b border-gray-200"><%= white_code.code %></td>
  <td class="px-6 py-3 whitespace-no-wrap border-b border-gray-200 text-right flex flex-row justify-end">

    <%= link_to edit_white_code_path(white_code), class: 'w-6 h-6 p-2 rounded-full bg-blue-300 hover:bg-blue-500 text-black border-gray-300 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black', data: { turbo_frame: 'admin_form' } do %>
      <i class="fa-solid fa-info"></i>
    <% end %>

    <%= button_to white_code, method: :delete,
                        class: "w-6 h-6 p-2 ml-4 rounded-full bg-red-300 hover:bg-red-500 text-black border-gray-300 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black", form: { data: { turbo_confirm: t(".confirm_delete") } } do %>
      <i class="fa-solid fa-trash text-xs"></i> 
    <% end %>
  </td>
<% end %>
